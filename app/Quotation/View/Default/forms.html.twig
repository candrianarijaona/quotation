{% macro hidden(name, model) %}
    <input type="hidden" name="{{ name }}" value="{{ attribute(model, name) }}">
{% endmacro %}

{% macro input(name, label, model, classe) %}
    <section {% if classe %}class="{{ classe }}"{% endif %}>
        <label class="label" for="{{ name }}">{{ label }}</label>
        <label class="input {% if errors %}state-error{% endif %}">
            <input type="text" id="{{ name }}" name="{{ name }}" value="{{ attribute(model, name) }}" />
        </label>
        {% set errors = attribute(model, 'errors') %}
        {% for error in attribute(errors, name) %}
            <div class="note note-error">{{ error }}</div>
        {% endfor %}
    </section>
{% endmacro %}

{% macro select(name, label, model, dataProvider) %}
    {% set value = attribute(model, name) %}
    <section>
        <label class="label" for="{{ name }}">{{ label }}</label>
        <label class="select {% if errors %}state-error{% endif %}">
            <select name="{{ name }}" id="{{ name }}" class="select2" style="width:100%">
                <option value="">Veuillez choisir</option>
                {% for option in dataProvider.data %}
                    {% set optionValue = attribute(option, dataProvider.id) %}
                    {% set optionLabel = attribute(option, dataProvider.label)%}
                    <option value="{{ optionValue is not null ? optionValue : option }}" {% if (optionValue is not null and optionValue == value) or (optionValue is null and option == value) %}selected="selected"{% endif %}>{{ optionLabel is not null ? optionLabel : option }}</option>
                {% endfor %}
            </select>
        </label>
        {% for error in errors %}
            <div class="note note-error">{{ error }}</div>
        {% endfor %}
    </section>
{% endmacro %}
