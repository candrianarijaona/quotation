{% extends 'layout.html.twig' %}

{% import 'Default/forms.html.twig' as forms %}

{% block ribbon %}
    <div id="ribbon">
        <ol class="breadcrumb"><li><a href="{{ path_for('home') }}">Accueil</a></li><li><a href="{{ path_for('prestation-list') }}">Prestation</a></li><li>Edition</li></ol>
    </div>
{% endblock %}

{% block content %}
    {% include 'Default/form_open.html.twig' with {'title' : 'Prestation'} %}

        <form action="{{ path_for('prestation-edit', {'id': prestation.id_prestation}) }}" class="smart-form" method="post">
            <header>
                {% if prestation.id_prestation %}Modification{% else %}Nouveau{% endif %}
            </header>

            <fieldset>
                {{ foms.hidden('id_prestation', prestation) }}
                {{ forms.input('label', 'DÃ©signation', prestation) }}
                {{ forms.select('type', 'Type', prestation, {'data': ['forfait', 'location', 'autre']}) }}
                {{ forms.input('prix', 'Prix par jour', prestation) }}
            </fieldset>

            <footer>
                <button type="submit" class="btn btn-primary">
                    Enregistrer
                </button>
                <a type="button" class="btn btn-default" href="{{ path_for('prestation-list') }}">
                    Retour
                </a>
            </footer>
        </form>
    {% include 'Default/form_close.html.twig' %}
{% endblock %}
