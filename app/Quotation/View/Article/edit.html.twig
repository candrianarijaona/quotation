{% extends 'layout.html.twig' %}

{% import 'Default/forms.html.twig' as forms %}

{% block ribbon %}
    <div id="ribbon">
        <ol class="breadcrumb"><li><a href="{{ path_for('home') }}">Accueil</a></li><li><a href="{{ path_for('article-list') }}">Article</a></li><li>Edition</li></ol>
    </div>
{% endblock %}

{% block content %}
    {% include 'Default/form_open.html.twig' with {'title' : 'Article'} %}

        <form action="{{ path_for('article-edit', {'id': article.id_article}) }}" class="smart-form" method="post">
            <header>
                {% if article.id_article %}Modification{% else %}Nouveau{% endif %}
            </header>

            <fieldset>

                {{ forms.hidden('id_article', article) }}

                {{ forms.input('label', 'Désignation', article) }}

                {{ forms.select('id_categorie', 'Catégorie', article, {'data': categories, 'id' : 'id_categorie', 'label' : 'label'}) }}

                {{ forms.input('unite', 'Unité', article) }}

            </fieldset>

            <footer>
                <button type="submit" class="btn btn-primary">
                    Enregistrer
                </button>
                <a type="button" class="btn btn-default" href="{{ path_for('article-list') }}">
                    Retour
                </a>
            </footer>
        </form>
    {% include 'Default/form_close.html.twig' %}
{% endblock %}
