{% extends 'layout.html.twig' %}

{% block ribbon %}
    <div id="ribbon">
        <ol class="breadcrumb"><li><a href="{{ path_for('home') }}">Accueil</a></li><li>Article</li></ol>
    </div>
{% endblock %}

{% block content %}
    {% include "Default/list_open.html.twig" %}
        <div class="widget-body">
            <div class="widget-body-toolbar">
                <div class="row">
                    <div class="col-sm-6">
                        <a href="{{ path_for('article-edit') }}" class="btn btn btn-default">Nouveau</a>
                    </div>
                </div>
            </div>
            <table class="table datatable table-bordered">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Désignation</th>
                    <th>Catégorie</th>
                    <th>Unité</th>
                    <th>Prix</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.id_article }}</td>
                        <td>{{ article.label }}</td>
                        <td>{{ article.categorie.label }}</td>
                        <td>{{ article.unite }}</td>
                        <td>{{ article.prix }}</td>
                        <td>
                            <a href="{{ path_for('article-edit', {'id': article.id_article}) }}" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i></a>
                            <a href="{{ path_for('article-delete', {'id': article.id_article}) }}" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% include "Default/list_close.html.twig" %}
{% endblock %}
