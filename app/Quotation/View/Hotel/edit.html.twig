{% extends 'layout.html.twig' %}

{% import 'Default/forms.html.twig' as forms %}

{% block ribbon %}
    <div id="ribbon">
        <ol class="breadcrumb"><li>Accueil</li><li>Hotel</li><li>Edition</li></ol>
    </div>
{% endblock %}

{% block content %}
    {% include 'Default/form_open.html.twig' with {'title' : 'Hotel'} %}

        <form action="{{ path_for('hotel-edit', {'id': hotel.id_hotel}) }}" class="smart-form" method="post">
            <header>
                {% if hotel.id_hotel %}Modification{% else %}Nouveau{% endif %}
            </header>

            <fieldset>

                {{ forms.hidden('id_hotel', hotel) }}

                {{ forms.input('label', 'Nom', hotel) }}

                {{ forms.select('id_ville', 'Ville', hotel, {'data' : villes, 'id': 'id_ville', 'label': 'label'}) }}

                {{ forms.select('categorie', 'Catégorie', hotel, {'data' : range(1,5)}) }}

                {{ forms.input('prix_single', 'Prix Single', hotel, 'col col-6') }}

                {{ forms.input('prix_double', 'Prix Double', hotel, 'col col-6') }}

                {{ forms.input('prix_petit_dejeuner', 'Prix Petit Déjeuner', hotel, 'col col-4') }}

                {{ forms.input('prix_dejeuner', 'Prix Déjeuner', hotel, 'col col-4') }}

                {{ forms.input('prix_diner', 'Prix Diner', hotel, 'col col-4') }}

                {{ forms.input('lit_supp', 'Lit supplémentaire', hotel, 'col col-4') }}

                {{ forms.input('vignette', 'Vignette', hotel, 'col col-4') }}

                {{ forms.input('taxe', 'Taxe', hotel, 'col col-4') }}

            </fieldset>

            <footer>
                <button type="submit" class="btn btn-primary">
                    Enregistrer
                </button>
                <a type="button" class="btn btn-default" href="{{ path_for('hotel-list') }}">
                    Retour
                </a>
            </footer>
        </form>
    {% include 'Default/form_close.html.twig' %}
{% endblock %}
